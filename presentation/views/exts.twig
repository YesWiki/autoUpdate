<table class="table table-striped table-condensed">
    <tr>
        <th>Nom</th>
        <th>Version install√©e</th>
        <th>Version disponible</th>
        <th></th>
        <th></th>
  </tr>
      {% for ext in exts %}
        <tr>
            <td>
                {{ ext.name }}
            </td>
            <td>
                {% if ext.installed %}
                    {{ ext.localRelease }}
                {% else %}
                    {{ AU_ABSENT }}
                {% endif %}
            </td>
            <td>
                {{ ext.release }}
            </td>
            <td>
                {% if isAdmin and ext.updateAvailable and ext.installed %}
                    <a  href="{{ baseUrl }}{{ ext.updateLink }}"
                        class="btn btn-success btn-xs"
                        title="{{ AU_UPDATE }}"
                    >
                        {{ AU_UPDATE }}
                    </a>
                {% endif %}

                {% if isAdmin and ext.installed and not ext.updateAvailable %}
                    <a  href="{{ baseUrl }}{{ ext.updateLink }}"
                        class="btn btn-warning btn-xs"
                        title="{{ AU_FORCE_UPDATE }}"
                    >
                        {{ AU_FORCE_UPDATE }}
                    </a>
                {% endif %}

                {% if isAdmin and not ext.installed %}
                    <a  href="{{ baseUrl }}{{ ext.updateLink }}"
                        class="btn btn-primary btn-xs"
                        title="{{ AU_INSTALL }}"
                    >
                        {{ AU_INSTALL }}
                    </a>
                {% endif %}
            </td>
            <td>
                {% if isAdmin and ext.installed %}
                    <a  href="{{ baseUrl }}{{ ext.deleteLink }}"
                        class="btn btn-danger btn-xs"
                        title="{{ AU_DELETE_EXT }}"
                    >
                        {{ AU_DELETE_EXT }}
                    </a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
